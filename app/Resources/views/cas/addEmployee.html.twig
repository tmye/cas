                                                {{ form_row(form.hire_date, {'attr': {'class': 'input-customized datepicker','placeholder':'Une petite description'}}) }}
                                            </div>
                                            <div class="input-field col s4">
                                                <span>Département</span>
                                                {{ form_row(form.departement) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s4">
                                                <span>Heure de travail</span>
                                                {{ form_row(form.workingHour, {'attr':{'class':'selectWorkingHour'}}) }}
                                            </div>
                                            <div class="input-field col s4 center">
                                                <span>Photo de profil</span>
                                                {{ form_row(form.picture, {'attr': {'class':'fileInput','placeholder':'Le titre de la permission','style':'display:none'}}) }}
                                                <button id="previewButton" type="button" style="width: 180px;height: 30px;border: solid 1px rgba(0,0,0,0.2);margin-top: 20px">Choisir une image</button>
                                            </div>
                                            <div class="input-field col s4 center">
                                                {% if picPath is defined and picPath is not null %}
                                                    <img id="preview" src="{{ asset('uploads/img/')~picPath }}" alt="image_preview" class="employee_image_preview" width="100" height="100">
                                                {% else %}
                                                    <img id="preview" src="{{ asset('img/guest.png') }}" alt="image_preview" class="employee_image_preview" width="100" height="100">
                                                {% endif %}
                                            </div>
                                        </div>
                                            {{ form_row(form.picture, {'attr': {'accept': '.gif,.jpg,.jpeg,.png'}}) }}
                                            <br>
                                            {{ form_rest(form) }}
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function(){

            $('.hideTable').hide();

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#preview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            $(".fileInput").change(function() {
                readURL(this);
            });

            $("#previewButton").click(function(){
                $(".fileInput").click();
            });

            $(".selectWorkingHour").change(function(){
                var c = $(".selectWorkingHour input").val();
                $('.hideTable').hide();
                $('.detailSpan').show();
                $('#'+c).show();
            });
        });
    </script>
{% endblock %}

