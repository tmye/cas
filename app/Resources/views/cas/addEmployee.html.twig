{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col l9 offset-l3">
            <h5>Nouvel Employé</h5>


            <div class="row">
                <div class="col l12">
                    <ul class="collapsible" data-collapsible="accordion">
                        <li>
                            <div class="collapsible-header active">Formulaire d'ajout d'un nouvel employé</div>
                            <div class="collapsible-body" style="padding-bottom: 0px">
                                <div class="row">
                                    <div class="col l12">
                                            <span class="detailSpan" style="display: none">Détails de l'heure de travail sélectionnée</span>
                                        {% for wh in whList %}
                                            <table class="bordered striped centered hideTable" id="{{ wh.workingHour.code }}" style="display: none">
                                                <thead>
                                                <tr>
                                                    <th>Code</th>
                                                    <th>Lundi</th>
                                                    <th>Mardi</th>
                                                    <th>Mercredi</th>
                                                    <th>Jeudi</th>
                                                    <th>Vendredi</th>
                                                    <th>Samedi</th>
                                                    <th>Dimanche</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <tr>
                                                    <td>{{ wh.workingHour.code }}</td>
                                                    <td>
                                                        {% if wh.workingHour.lundi[0].type == 1 %}
                                                            {{ "Heures définies" }}
                                                        {% elseif wh.workingHour.lundi[0].type == 2 %}
                                                            {{ "Quota horraire" }}
                                                            <br>
                                                            {{ "Quota : "~wh.workingHour.lundi[0].quota }}
                                                        {% elseif wh.workingHour.lundi[0].type == 3 %}
                                                            {{ "Présence" }}
                                                        {% else %}
                                                            {{ "<span class='fa fa-times red white-text'></span>Présence non requise" }}
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if wh.workingHour.mardi[0].type == 1 %}
                                                            {{ "Heures définies" }}
                                                        {% elseif wh.workingHour.mardi[0].type == 2 %}
                                                            {{ "Quota horraire" }}
                                                            <br>
                                                            {{ "Quota : "~wh.workingHour.mardi[0].quota }}
                                                        {% elseif wh.workingHour.mardi[0].type == 3 %}
                                                            {{ "Présence" }}
                                                        {% else %}
                                                            {{ "<span class='fa fa-times red white-text'></span>Présence non requise" }}
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if wh.workingHour.mercredi[0].type == 1 %}
                                                            {{ "Heures définies" }}
                                                        {% elseif wh.workingHour.mercredi[0].type == 2 %}
                                                            {{ "Quota horraire" }}
                                                            <br>
                                                            {{ "Quota : "~wh.workingHour.mercredi[0].quota }}
                                                        {% elseif wh.workingHour.mercredi[0].type == 3 %}
                                                            {{ "Présence" }}
                                                        {% else %}
                                                            {{ "<span class='fa fa-times red white-text'></span>Présence non requise" }}
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if wh.workingHour.jeudi[0].type == 1 %}
                                                            {{ "Heures définies" }}
                                                        {% elseif wh.workingHour.jeudi[0].type == 2 %}
                                                            {{ "Quota horraire" }}
                                                            <br>
