{% extends 'base.html.twig' %}

{% block title %}C.A.S - Département{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="wrapper">

        {% include('cas/partials/_sidebar.html.twig') %}

        <div class="content-page">
            <div class="content">    
                <div class="row">
        <div class="col-lg-12">
            <h2 class="h5_title page-title"><span class="uil-link"></span> Gestion des Départements</h2>
            <p class="description_message">Créez de nouveaux départements ou modifiez ceux existants</p>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="collapsible" data-collapsible="accordion">
                        <li>
                            <div class="collapsible-header active collapsible-header-title">Formulaire d'ajout d'un nouveau département</div>
                            <div class="collapsible-body" style="padding-bottom: 0px">
                                {% for message in  app.session.flashbag.get('notice') %}
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="operation_message">
                                                {{ message }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                                <div class="row">
                                    <div class="col-lg-12">
                                        {%  if message is defined and message is not null %}
                                            <div class="operation_message">
                                                {{ message }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="row" style="width: 100%">

                                    <div class="col-lg-12">
                                        {{ form_start(form) }}
                                            {{ form_row(form.name, {'attr': {'class': 'form-control input-customized','placeholder':'Nom du département'}}) }}
                                            {{ form_row(form.maxCount, {'attr': {'class': 'mb-3 form-control input-customized','placeholder':'Nombre maximum d\'employés'}}) }}
                                            {{ form_rest(form) }}
                                        {{ form_widget(form.creer, { 'label': 'Créer','attr': {'class':'mt-5 btn btn-lg btn-success'} }) }}
                                        {{ form_end(form) }}
                                    </div>
                                    <div class="col-lg-12 ">

                                    </div>

                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="collapsible" data-collapsible="accordion">
                        <li>
                            <div class="collapsible-header active collapsible-header-title">Liste des départements</div>
                            <div class="collapsible-body" style="padding-bottom: 0px">
                                <div class="row">
                                    <table class="table table-striped table-responsive col-lg-12">
                                        <tr>
                                            <th>#</th>
                                            <th>Nom</th>
                                            <th>Membres</th>
                                            <th>Membres maximum</th>
                                            <th>Date de création</th>
                                            <th>Créé par</th>
                                            <th>#Modification</th>
                                        </tr>
                                        {% for dep in listDep %}
                                            <tr>
                                                <td>{{ dep.id }}</td>
                                                <td>{{ dep.name }}</td>
                                                <td>{{ dep.depEmployeeCount }}</td>
                                                <td>{{ dep.maxCount }}</td>
                                                <td>{{ dep.CreateDate | date('d-m-Y H:i:s') }}</td>
                                                <td>{{ dep.author }}</td>
                                                <td>
                                                    <a href="{{ path("editDepartement",{'id':dep.id}) }}">
                                                        <button class="btn btn-primary simple-button-decoration blue"><span class="uil-pen white-text"></span></button>
                                                    </a>
                                                    <button class="btn btn-danger simple-button-decoration red deleteDep" identify="{{ path('deleteDepartement',{'id':dep.id}) }}"><span class="uil-trash white-text"></span></button>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function(){
            $(".deleteDep").click(function(){
                var rep = confirm("Etes-vous sur de vouloir supprimer ce département?");
                var id = this.getAttribute('identify');
                if(rep==true){
                    window.location.href = id;
                }
            });
        });
    </script>
{% endblock %}

{% block stylesheets %}
{% endblock %}
