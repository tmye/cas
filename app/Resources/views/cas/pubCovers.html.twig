                                        </div>
                                        <div class="row">
                                            <div class="col l4 card">
                                                <img src="{{ asset("img/img1.jpg") }}" class="preview" alt="image">
                                            </div>
                                            <div class="col l4 card">
                                                <img src="{{ asset("img/img2.jpg") }}" class="preview" alt="image">
                                            </div>
                                            <div class="col l4 card">
                                                <img src="{{ asset("img/img3.jpg") }}" class="preview" alt="image">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col l12 center">
                                                <input type="submit" value="Continuer" class="btn-perso-historique">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

