{% extends 'base.html.twig' %}


{% block title %}C.A.S - Administration{% endblock %}

{% block body %}
    <div class="row">
        <div class="col l12">
            <h5>Attribuer l'administration à un employé</h5>
            <div class="row">
                <div class="col l12">
                    <ul class="collapsible" data-collapsible="accordion">
                        <li>
                            <div class="collapsible-header active">Définir un employé en tant qu'administrateur</div>
                            <div class="collapsible-body" style="padding-bottom: 0px">
                                <form method="post" action="{{ path('addAdmin') }}">
                                    <div class="row">
                                        <div class="col l6">
                                            <span class="detailSpan">Choisissez l'employé</span>
                                            <br>
                                            <select name="employe">
                                                {% for emp in employe %}
                                                    <option value="{{ emp.id }}">{{ emp.surname~" "~emp.lastName }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col l12">
                                            <input type="submit" value="Valider">
                                        </div>
                                    </div>
                                    {% if status is defined and status == 200 %}
                                        <div class="alert alert-success center" style="padding: 10px;border-radius: 5px">Cet employé a été définie en tant qu'administrateur</div>
                                        <br>
                                    {% endif %}
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
