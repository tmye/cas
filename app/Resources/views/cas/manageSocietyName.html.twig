{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col l12">
            <h5>Changer le nom de la société</h5>

            <div class="row">
                <div class="col l12">
                    <ul class="collapsible" data-collapsible="accordion">
                        <li>
                            <div class="collapsible-header active">Changement de nom</div>
                            <div class="collapsible-body" style="padding-bottom: 0px">
                                <div class="row">
                                    <form class="col l12" id="main_form">
                                        <span id="type1">
                                            <div class="row firstOne">
                                                <div class="col l12">
                                                    <h5>Nom de la société</h5>
                                                    <span>Changer le nom de la société</span>
                                                </div>
                                            </div>
                                            <div>
                                                <input type="text" id="companyName" placeholder="Entrez le nouveau nom de la société">
                                                <br><br>
                                                <input type="button" id="submitSocietyName" class="btn" value="Changer">
                                            </div>
                                        </span>
                                    </form>
                                </div>
                                <div class="row">
                                    <form class="col l12" id="main_form">
                                        <span id="type1">
                                            <div class="row firstOne">
                                                <div class="col l12">
                                                    <h5>Logo de la société</h5>
                                                    <span>Changer le logo de la société</span>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="row">
                                                    <div class="col l8">
                                                        <input type="file" class="fileInput" id="fileInput">
                                                        <br><br>
                                                        <input type="button" id="submitSocietyLogo" class="btn" value="Changer">
                                                    </div>
                                                    <div class="col l4">
                                                        <img src="" id="preview" alt="companyLogo" class="companyLogoPreview">
                                                    </div>
                                                </div>
                                            </div>
                                        </span>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $("#submitSocietyName").click(function () {
                $.ajax({
                    type: 'POST',
                    url: "changeSocietyName",
                    data: {'name':$("#companyName").val()},
                    success: function(data) {
                        alert(data);
                    },
                    error: function () {
                    }
                });
            });

            // Section du logo de la société

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#preview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            $(".fileInput").change(function() {
                readURL(this);
            });

            /*$("#previewButton").click(function(){
                $(".fileInput").click();
            });*/

            // Requete ajax de soumission de l'image

            $("#submitSocietyLogo").click(function(){
                var formdata = new FormData();
                var fInput = document.getElementById("fileInput");
                console.log(fInput);
                formdata.append("image",fInput.files[0]);
                console.log(fInput);

                $.ajax({
                    url: "{{ path('changeSocietyLogo') }}",
                    type: "POST",
                    data: formdata,
                    cache:false,
                    contentType: false,
                    processData: false,
                    success: function(data) {
                        alert(data);
                    },
                    error: function() {
                        alert("Erreur");
                    }
                });
                /*$.ajax({
                    url: "{path('syncPubCoverAll')}",
                    type: "POST",
                    data: {"deps":tab},
                    success: function(data) {
                        alert(data);
                    },
                    error: function() {
                        alert("Erreur");
                    }
                });*/
            });

        });
    </script>
{% endblock %}
