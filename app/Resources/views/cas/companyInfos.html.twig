{% extends 'base.html.twig' %}


{% block title %}C.A.S - Informations{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="wrapper">

        {% include('cas/partials/_sidebar.html.twig') %}

        <!-- Modal for ajax loading -->
        <div id="modal_loading" class="modal ajax_modals">
            <div class="modal-content">
                <p class="center">
                    <img src="{{ asset('img/ajax_loaders/ajax-loading.gif') }}">
                </p>
            </div>
        </div>

        <div class="content-page">
            <div class="content">
                <div class="col-lg-12"><h2 class="h5_title"><span class="uil-info-circle"></span> Informations relatives à votre société</h2></div>
                <div class="row card">
                    <div class="col-lg-12 card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="collapsible" data-collapsible="accordion">
                                    <li>
                                        <div class="collapsible-header active collapsible-header-title">Formulaire d'ajout d'informations</div>
                                        <div class="collapsible-body" style="padding-bottom: 0px">
                                            {% for message in  app.session.flashbag.get('notice') %}
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="operation_message">
                                                            {{ message }}
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}

                                            {% if form is defined and form is not null %}
                                                {{ form_start(form) }}
                                                <div class="row" >
                                                    <div class="form-group mt-2 col-lg-6 col-sm-12">
                                                        <label>Vision</label>
                                                        {{ form_row(form.vision, {'attr': {'class': 'form-control input-customized','placeholder':'Vision    '}}) }}
                                                    </div>
                                                    <div class="form-group mt-2 col s8">
                                                        <span>Mission</span>
                                                            {{ form_row(form.mission, {'attr': {'class': 'form-control input-customized','placeholder':'Mission'}}) }}
                                                        </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group mt-2 col-lg-6 col-sm-12">
                                                        <span>Fondation</span>
                                                        {{ form_row(form.foundation, {'attr': {'class': 'form-control input-customized','placeholder':'Fondation'}}) }}
                                                    </div>
                                                    <div class="form-group mt-2 col-lg-6 col-sm-12">
                                                        <span>Siège</span>
                                                        {{ form_row(form.headoffice, {'attr': {'min':'1','class':'form-control input-customized contact_field','placeholder':'Siège'}}) }}
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="form-group mt-2 col-lg-6 col-sm-12">
                                                        <span>Directeur</span>
                                                        {{ form_row(form.director, {'attr': {'min':'1','class':'form-control input-customized','placeholder':'Directeur'}}) }}
                                                    </div>

                                                    <div class="form-group mt-2 col-lg-6 col-sm-12">
                                                        <span>Valeurs</span>
                                                        {{ form_row(form.value, {'attr': {'min':'1','class':'form-control input-customized','placeholder':'Valeurs'}}) }}
                                                    </div>
                                                </div>

                                                {{ form_widget(form.creer, { 'label': 'Créer','attr': {'class':'mt-3 btn btn-success'} }) }}
                                                <br/><br/>

                                                {{ form_end(form) }}
                                            {% endif %}
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block stylesheets %}
{% endblock %}
