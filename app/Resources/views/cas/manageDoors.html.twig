{% extends 'base.html.twig' %}
{% block title %}C.A.S - Portes{% endblock %}
{% block body %}

    <!-- Modal for ajax loading -->
    <div>
        <!-- Modal for ajax loading -->
        <div id="modal_loading" class="modal ajax_modals">
            <div class="modal-content" style="width: 200px;display:table;position:relative;margin: 0 auto; top: calc(50% - 24px);">
                <p class="center">
                    <img class="mw-100 mh-100" src="{{ asset('img/ajax_loaders/ajax-loading.gif') }}">
                </p>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="wrapper">

            {% include('cas/partials/_sidebar.html.twig') %}

            <div class="content-page">
                <div class="content">

                    <div class="col-lg-12">
                        <h2>Gérer les portes</h2>
                    </div>

                    <div class="row card">
                        <div class="col-lg-12 card-body">
                            <div class="row">
                                <div class="col l12">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <a class="btn btn-primary btn-lg text-white" id="configDaysBtn"> Configurer des jours </a>
                                            <a class="btn btn-primary btn-lg text-white" id="configDayBtn"> Configurer un jour </a>
                                            <div id="configDays" class="mt-3">
                                                <form action="{{ path('manageDoors') }}" method="post" id="repeater">
                                                    <input type="hidden" value="week" name="type">
                                                    <div id="repeater">
                                                        <div class="repeater-heading">
                                                            <a class="btn btn-primary text-white repeater-add-btn" id="repeaterAddBtn">Ajouter</a>
                                                        </div>

                                                        <div class="items" data-group="test">

                                                            <br>
                                                                <div class="item-content d-block mb-2">

                                                                <div class="row mb-3">
                                                                    <div class="col-lg-6">
                                                                        <select name="device_id" data-name="device_id" required id="" class="form-control">
                                                                            <option value="">Selectionez une machine</option>
                                                                            {% if machines is defined %}
                                                                                {% for machine in machines %}
                                                                                    <option value="{{ machine.id }}"> {{ machine.name }} </option>
                                                                                {% endfor %}
                                                                            {% endif %}
                                                                        </select>
                                                                    </div>

                                                                    <div class="col-lg-6">
                                                                        <select required name="time_frame_value" data-name="time_frame_value" id="" class="form-control">
                                                                            <option value="">Selectionez une durée </option>
                                                                            <option value="0">Lundi</option>
                                                                            <option value="1">Mardi</option>
                                                                            <option value="2">Mercredi</option>
                                                                            <option value="3">Jeudi</option>
                                                                            <option value="4">Vendredi</option>
                                                                            <option value="5">Vendredi</option>
                                                                            <option value="6">Vendredi</option>
                                                                        </select>
                                                                    </div>
                                                                </div>

                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <label for="">Heure d'ouverture</label>
                                                                        <input type="time"  class="form-control" name="open" data-name="open" >
                                                                    </div>
                                                                    <div class="col-lg-6">
                                                                        <label for="">Heure de fermeture</label>
                                                                        <input type="time" class="form-control" name="close" data-name="close">
                                                                    </div>
                                                                </div>

                                                                <div class="float-right mt-1 repeater-remove-btn">
                                                                    <a id="remove-btn" class="btn btn-danger text-white" onclick="$(this).parents('.items').remove()">Supprimer</a>
                                                                </div>

                                                            </div>
                                                            <br>

                                                        </div>
                                                    </div>

                                                </form>
                                                <br>
                                                <div class="row">
                                                    <button class="btn btn-success mt-3" id="configDaysSubmit" type="submit">Valider</button>
                                                </div>
                                                <br>
                                            </div>

                                            <div id="configDay">
                                                <form action="{{ path('manageDoors') }}" method="post">
                                                    <input type="hidden" value="day" name="type">
                                                    <div class="items" data-group="door_configs">
                                                        <br>
                                                        <div class="item-content d-block mb-2">

                                                            <div class="row mb-3">
                                                                <div class="col-lg-6">
                                                                    <select name="device_id" data-name="device_id" required id="" class="form-control">
                                                                        <option value="">Selectionez une machine</option>
                                                                        {% if machines is defined %}
                                                                            {% for machine in machines %}
                                                                                <option value="{{ machine.id }}"> {{ machine.name }} </option>
                                                                            {% endfor %}
                                                                        {% endif %}
                                                                    </select>
                                                                </div>

                                                                <div class="col-lg-6">
                                                                    <input type="number" name="time_frame_value" min="1" placeholder="Numéro du jour" class="form-control" max="31">
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-lg-6">
                                                                    <label for="">Heure d'ouverture</label>
                                                                    <input type="time"  class="form-control" name="open" data-name="open" >
                                                                </div>
                                                                <div class="col-lg-6">
                                                                    <label for="">Heure de fermeture</label>
                                                                    <input type="time" class="form-control" name="close" data-name="close">
                                                                </div>
                                                            </div>

                                                            <div class="float-left mt-1 repeater-remove-btn">
                                                                <button type="submit" id="remove-btn" class="btn btn-success text-white">Valider</button>
                                                            </div>

                                                        </div>
                                                        <br>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset("assets/js/vendor/jquery-duplicate/repeater.js") }}"></script>
    <script>
        $(document).ready(function (){

            $("#configDay").hide();

            $("#configDays").hide();

            $("#configDaysSubmit").on('click', function (e){
                $("#repeater").submit();
            });

            $("#configDaysBtn").on('click', function (e){
                e.preventDefault();
                $("#configDays").show();
                $("#configDay").hide();
            });

            $("#configDayBtn").on('click', function (e){
                e.preventDefault();
                $("#configDay").show();
                $("#configDays").hide();
            });

            $("#repeater").createRepeater();

            $("#repeaterAddBtn").click();
        });
    </script>
{% endblock %}
