{% extends 'base.html.twig' %}
{% block title %}C.A.S - Portes{% endblock %}
{% block body %}

    <!-- Modal for ajax loading -->
    <div>
        <!-- Modal for ajax loading -->
        <div id="modal_loading" class="modal ajax_modals">
            <div class="modal-content" style="width: 200px;display:table;position:relative;margin: 0 auto; top: calc(50% - 24px);">
                <p class="center">
                    <img class="mw-100 mh-100" src="{{ asset('img/ajax_loaders/ajax-loading.gif') }}">
                </p>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="wrapper">

            {% include('cas/partials/_sidebar.html.twig') %}

            <div class="content-page">
                <div class="content">

                    <div class="col-lg-12">
                        <h2>Gérer les portes</h2>
                    </div>

                    <div class="row card">
                        <div class="col-lg-12 card-body">
                            <div class="row">
                                <div class="col l12">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="row">

                                                <div class="col-lg-6"></div>
                                                <div class="col-lg-6">
                                                    <a class="btn btn-primary btn-lg text-white" id="configDaysBtn"> Configurer des jours </a>
                                                    <a class="btn btn-primary btn-lg text-white" id="configDayBtn"> Configurer un jour </a>
                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <select name="device_id" required id="deviceId" class="form-control">
                                                        <option value="">Selectionez une machine</option>
                                                        {% if machines is defined %}
                                                            {% for machine in machines %}
                                                                <option value="{{ machine.machineId }}"> {{ machine.name }} </option>
                                                            {% endfor %}
                                                        {% endif %}
                                                    </select>
                                                </div>
                                            </div>

                                            <div id="configDay">
                                                <form action="{{ path('manageDoors') }}" id="configDayForm" method="post">
                                                    <input type="hidden" value="day" name="time_frame">
                                                    <div id="repeater1">
                                                        <div class="repeater-heading mt-2">
                                                            <a class="btn btn-primary text-white repeater-add-btn" id="repeaterAddBtn1"> <i class="fa fa-plus"></i> Ajouter</a>
                                                        </div>

                                                        <div class="items" data-group="door_day_configs">
                                                        <br>
                                                        <div class="item-content d-block mb-2">

                                                            <div class="row mb-3">
{#
                                                                <div class="col-lg-6">
                                                                    <select name="device_id" data-name="device_id" required id="" class="form-control">
                                                                        <option value="">Selectionez une machine</option>
                                                                        {% if machines is defined %}
                                                                            {% for machine in machines %}
                                                                                <option value="{{ machine.machineId }}"> {{ machine.name }} </option>
                                                                            {% endfor %}
                                                                        {% endif %}
                                                                    </select>
                                                                </div>
#}

                                                                <div class="col-lg-4 col-sm-12">
                                                                    <label for="">&nbsp</label>
                                                                    <input type="number" name="time_frame_value" data-name="time_frame_value" min="1" placeholder="Numéro du jour" class="form-control" max="31">
                                                                </div>

                                                                <div class="col-lg-4 col-sm-12">
                                                                    <label for="">Heure d'ouverture</label>
                                                                    <input type="time"  class="form-control" name="open" data-name="open" >
                                                                </div>

                                                                <div class="col-lg-4 col-sm-12">
                                                                    <label for="">Heure de fermeture</label>
                                                                    <input type="time" class="form-control" name="close" data-name="close">
                                                                </div>

                                                            </div>

                                                            <div class="row">

                                                            </div>
                                                            <div class="float-right mt-1 repeater-remove-btn">
                                                                <a id="remove-btn" class="btn btn-danger text-white" onclick="$(this).parents('.items').remove()">Supprimer</a>
                                                            </div>

                                                        </div>
                                                        <br>
                                                    </div>
                                                    </div>
                                                </form>
                                            </div>


                                            <div id="configDays" class="mt-3">
                                                <form action="{{ path('manageDoors') }}" method="post" id="configDaysForm">
                                                    <input type="hidden" value="week" name="time_frame">
                                                    <div id="repeater">
                                                        <div class="repeater-heading">
                                                            <a class="btn btn-primary text-white repeater-add-btn" id="repeaterAddBtn"><i class="fa fa-plus"></i> Ajouter</a>
                                                        </div>

                                                        <div class="items" data-group="door_days_configs">
                                                            <br>
                                                                <div class="item-content d-block mb-2">
                                                                    <div class="row mb-3">

                                                                        <div class="col-lg-4 col-sm-12">
                                                                            <label for="">&nbsp</label>
                                                                            <select required name="time_frame_value" data-name="time_frame_value" id="" class="form-control">
                                                                                <option value="">Selectionez une durée </option>
                                                                                <option value="0">Lundi</option>
                                                                                <option value="1">Mardi</option>
                                                                                <option value="2">Mercredi</option>
                                                                                <option value="3">Jeudi</option>
                                                                                <option value="4">Vendredi</option>
                                                                                <option value="5">Vendredi</option>
                                                                                <option value="6">Vendredi</option>
                                                                            </select>
                                                                        </div>

                                                                        <div class="col-lg-4 col-sm-12">
                                                                            <label for="">Heure d'ouverture</label>
                                                                            <input type="time"  class="form-control" name="open" data-name="open" >
                                                                        </div>

                                                                        <div class="col-lg-4 col-sm-12">
                                                                            <label for="">Heure de fermeture</label>
                                                                            <input type="time" class="form-control" name="close" data-name="close">
                                                                        </div>


                                                                    </div>

                                                                    <div class="row">

                                                                    </div>

                                                                    <div class="float-right mt-1 repeater-remove-btn">
                                                                        <a id="remove-btn" class="btn btn-danger text-white" onclick="$(this).parents('.items').remove()">Supprimer</a>
                                                                    </div>
                                                                </div>
                                                            <br>
                                                        </div>
                                                    </div>

                                                </form>
                                            </div>

                                            <div class="row mt-3">
                                                <div class="col-lg-12">
                                                    <a href="" class="btn btn-success" id="doorConfigSubmit"> Valider</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset("assets/js/vendor/jquery-duplicate/repeater.js") }}"></script>
    <script>
        $(document).ready(function (){

            $("#configDay").hide();


            var deviceId = $('#deviceId');
            $("#doorConfigSubmit").on('click', function (e){
                e.preventDefault();

                if(!deviceId.val()){
                    deviceId.focus();
                    alert("Selectionez une machine");
                    return 1;
                }

                if($('#configDayForm').val().length === 0) {
                    $.ajax({
                        type: 'POST',
                        url: $('#configDayForm').attr('action'),
                        data: $('#configDayForm').serialize() + "&device_id="+deviceId.val()
                    }).fail(function (){
                        alert('Bad request !')
                    });
                }

                if($('#configDaysForm').val().length === 0 ) {
                    $.ajax({
                        type: 'POST',
                        url: $('#configDaysForm').attr('action'),
                        data: $('#configDaysForm').serialize() + "&device_id="+deviceId.val()
                    }).fail(function (){
                        alert('Bad request !')
                    });
                }

                if( $('#configDaysForm').val().length === 0  || $('#configDayForm').val().length === 0 ) {

                    $.ajax({
                        type: 'POST',
                        url: '{{ path('synDoor') }}',
                        data: "&device_id="+deviceId.val()
                    }).fail(function (){
                        alert('Bad request !')
                    });

                }
            });

            $("#configDaysBtn").on('click', function (e){
                e.preventDefault();
                $("#configDays").show();
            });

            $("#configDayBtn").on('click', function (e){
                e.preventDefault();
                $("#configDay").show();
            });

            $("#repeater").createRepeater();
            $("#repeater1").createRepeater();

            $("#repeaterAddBtn1").click();
            $("#repeaterAddBtn").click();
        });
    </script>
{% endblock %}
