{% extends 'base.html.twig' %}
{% block title %}C.A.S - Portes{% endblock %}
{% block body %}

    <!-- Modal for ajax loading -->
    <div>
        <!-- Modal for ajax loading -->
        <div id="modal_loading" class="modal ajax_modals">
            <div class="modal-content" style="width: 200px;display:table;position:relative;margin: 0 auto; top: calc(50% - 24px);">
                <p class="center">
                    <img class="mw-100 mh-100" src="{{ asset('img/ajax_loaders/ajax-loading.gif') }}">
                </p>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="wrapper">

            {% include('cas/partials/_sidebar.html.twig') %}

            <div class="content-page">
                <div class="content">

                    <div class="col-lg-12">
                        <h2>Gérer les portes</h2>
                    </div>

                    <div class="row card">
                        <div class="col-lg-12 card-body">
                            <div class="row">
                                <div class="col l12">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <form action="{{ path('manageDoors') }}" method="post">

                                                <div class="row mb-3">
                                                    <div class="col-lg-6">
                                                        <select name="device_id" required id="" class="form-control">
                                                            <option value="">Selectionez une machine</option>
                                                            {% if machines is defined %}
                                                                {% for machine in machines %}
                                                                    <option value="{{ machine.id }}"> {{ machine.name }} </option>
                                                                {% endfor %}
                                                            {% endif %}
                                                        </select>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <select required name="time_frame" id="" class="form-control">
                                                            <option value="">Selectionez une durée </option>
                                                            <option value="day">Jour</option>
                                                            <option value="week">Semaine</option>
                                                            <option value="month">Month</option>
                                                            <option value="year">Year</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <label for="">Heure d'ouverture</label>
                                                        <input type="time"  class="form-control" name="open">
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label for="">Heure de fermeture</label>
                                                        <input type="time" class="form-control" name="close">
                                                    </div>
                                                </div>
                                                <button class="btn btn-success mt-3" type="submit">Valider</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}
